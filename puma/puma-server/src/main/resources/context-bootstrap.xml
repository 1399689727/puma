<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
	<bean id="server-7_43" class="com.dianping.puma.server.impl.ReplicationBasedServer">
		<property name="host" value="192.168.7.43" />
		<property name="port" value="3306" />
		<property name="user" value="binlog" />
		<property name="password" value="binlog" />
		<property name="defaultBinlogFileName" value="" />
		<property name="defaultBinlogPosition" value="4" />
		<property name="parser" ref="defaultParser" />
		<property name="serverId" value="9908" />
		<property name="dataHandler" ref="defaultDataHandler" />
		<property name="dispatcher" ref="simpleDispatcher" />
	</bean>

	<bean id="simpleDispatcher"
		class="com.dianping.puma.sender.dispatcher.impl.SimpleDispatherImpl"
		init-method="start">
		<property name="name" value="simpleDispatcher" />
		<property name="senders">
			<list>
				<ref bean="sysoutSender" />
			</list>
		</property>
	</bean>



	<bean id="defaultDataHandler" class="com.dianping.puma.datahandler.impl.DefaultDataHandler"
		init-method="start">
		<property name="metaDBHost" value="192.168.7.43" />
		<property name="metaDBPort" value="3306" />
		<property name="metaDBUser" value="binlog" />
		<property name="metaDBPassword" value="binlog" />
	</bean>

	<bean id="defaultParser" class="com.dianping.puma.parser.impl.DefaultBinlogParser"
		init-method="start">
		<property name="name" value="server-7_43-parser" />
	</bean>

	<bean id="servers" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<ref bean="server-7_43" />
			</list>
		</constructor-arg>
	</bean>


	<bean id="sysoutSender" class="com.dianping.puma.sender.impl.SysoutSender"
		init-method="start">
		<property name="name" value="sysoutSender" />
	</bean>
</beans>


	