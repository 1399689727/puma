<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
	<bean id="server-7_43" class="com.dianping.puma.server.impl.ReplicationBasedServer">
		<property name="host" value="192.168.7.43" />
		<property name="port" value="3306" />
		<property name="user" value="binlog" />
		<property name="password" value="binlog" />
		<property name="defaultBinlogFileName" value="" />
		<property name="defaultBinlogPosition" value="4" />
		<property name="parser" ref="defaultParser" />
		<property name="serverId" value="9908" />
		<property name="dataHandler" ref="transactionSupportDataHandler" />
		<property name="dispatcher" ref="simpleDispatcher" />
	</bean>

	<bean id="simpleDispatcher"
		class="com.dianping.puma.sender.dispatcher.impl.SimpleDispatherImpl"
		init-method="start">
		<property name="name" value="simpleDispatcher" />
		<property name="senders">
			<list>
				<ref bean="testSender" />
				<ref bean="swallowSender1" />
			</list>
		</property>
	</bean>

	<bean id="testSender" class="com.dianping.puma.sender.impl.SysoutSender"
		init-method="start">
		<property name="name" value="TestSender" />
		<property name="filterChainConfig" ref="dbTbFilterChainConfig" />
	</bean>

	<bean id="dbTbFilterChainConfig" class="com.dianping.puma.filter.EventFilterChainConfig">
		<property name="eventFilters">
			<list>
				<ref bean="dbTbEventFilter" />
				<ref bean="dmlDdlEventFilter" />
			</list>
		</property>
	</bean>

	<bean id="dbTbEventFilter" class="com.dianping.puma.filter.DbTbEventFilter">
		<property name="dbtbMap">
			<ref bean="databases1" />
		</property>
	</bean>

	<bean id="dmlDdlEventFilter" class="com.dianping.puma.filter.DmlDdlEventFilter">
		<property name="operationType" value="both" />
	</bean>

	<bean id="database1" class="com.dianping.puma.filter.DbTbList">
		<property name="dbName" value="test" />
		<property name="tbNameList">
			<list>
				<value>Binlog_Test_2</value>
				<value>Binlog_Test_3</value>
			</list>
		</property>
	</bean>

	<bean id="databases1" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<ref bean="database1" />
			</list>
		</constructor-arg>
	</bean>

	<bean id="transactionSupportDataHandler"
		class="com.dianping.puma.datahandler.impl.TransactionSupportDataHandler"
		init-method="start">
		<property name="metaDBHost" value="192.168.7.43" />
		<property name="metaDBPort" value="3306" />
		<property name="metaDBUser" value="binlog" />
		<property name="metaDBPassword" value="binlog" />
	</bean>

	<bean id="defaultParser" class="com.dianping.puma.parser.impl.DefaultBinlogParser"
		init-method="start" />

	<bean id="servers" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<ref bean="server-7_43" />
			</list>
		</constructor-arg>
	</bean>

	<bean id="fileQueueConfigHolder"
		class="com.dianping.filequeue.DefaultFileQueueConfig.FileQueueConfigHolder">
		<property name="maxDataFileSize" value="524288000" />
		<property name="memCacheSize" value="50000" />
	</bean>

	<bean id="swallowSender1" class="com.dianping.puma.sender.impl.SwallowSender"
		init-method="start">
		<property name="name" value="swallow" />
		<property name="config" ref="fileQueueConfigHolder" />
		<property name="filterChainConfig" ref="dbTbFilterChainConfig" />
	</bean>
</beans>


	