<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

    <bean name="placeholder" lazy-init="false"
        class="com.dianping.lion.client.InitializeConfig">
        <property name="propertiesPath" value="applicationContext.properties" />
    </bean>

    <bean id="commonAlarmSerivce" class="com.dianping.dpsf.spring.ProxyBeanFactory"
        init-method="init">
        <property name="serviceName"
            value="http://service.dianping.com/hawk/alarm/commonAlarmSerivce" />
        <property name="iface"
            value="com.dianping.hawk.common.alarm.service.CommonAlarmService" />
        <property name="serialize" value="java" />
        <property name="callMethod" value="sync" />
        <property name="timeout" value="5000" />
    </bean>

    <bean id="notifyService" class="com.dianping.puma.core.monitor.DefaultNotifyService">
        <property name="alarmService" ref="commonAlarmSerivce" />
        <property name="devMode" value="false" />
    </bean>

    <bean id="notifiableBean" abstract="true">
        <property name="notifyService" ref="notifyService" />
    </bean>

    <bean id="statusReportTask" class="com.dianping.puma.server.StatusReportTask"
        parent="notifiableBean" init-method="start" />

    <bean id="dailyReportTask" class="com.dianping.puma.server.DailyReportTask"
        parent="notifiableBean" init-method="start" />

    <bean id="binlogPositionHolder"
        class="com.dianping.puma.server.MMapBasedBinlogPositionHolder"
        init-method="init">
        <property name="baseDir" value="/data/appdatas/puma/" />
    </bean>
    <bean id="server-Dianping" class="com.dianping.puma.server.ReplicationBasedServer"
        parent="notifiableBean">
        <property name="host" value="10.1.1.107" />
        <property name="port" value="3306" />
        <property name="user" value="binlog" />
        <property name="password" value="dp!@UqvTltKub" />
        <property name="defaultBinlogFileName" value="mysql-bin.001086" />
        <property name="defaultBinlogPosition" value="1002222242" />
        <property name="parser" ref="defaultParser" />
        <property name="serverId" value="9988" />
        <property name="dataHandler" ref="datahandler-Dianping" />
        <property name="dispatcher" ref="dispatcher-Dianping" />
        <property name="binlogPositionHolder" ref="binlogPositionHolder" />
    </bean>

    <bean id="dispatcher-Dianping"
        class="com.dianping.puma.sender.dispatcher.SimpleDispatherImpl"
        init-method="start">
        <property name="name" value="dispatcher-Dianping" />
        <property name="senders">
            <list>
                <ref bean="fileSender" />
            </list>
        </property>
    </bean>



    <bean id="datahandler-Dianping" class="com.dianping.puma.datahandler.DefaultDataHandler"
        init-method="start" parent="notifiableBean">
        <property name="tableMetasInfoFetcher" ref="tableMetasInfoFetcher" />
    </bean>

    <bean id="tableMetasInfoFetcher"
        class="com.dianping.puma.datahandler.DefaultTableMetaInfoFetcher">
        <property name="metaDBHost" value="10.1.1.107" />
        <property name="metaDBPort" value="3306" />
        <property name="metaDBUser" value="binlog" />
        <property name="metaDBPassword" value="dp!@UqvTltKub" />
    </bean>

    <bean id="defaultParser" class="com.dianping.puma.parser.DefaultBinlogParser"
        init-method="start" />

    <bean id="fileSender" class="com.dianping.puma.sender.FileDumpSender"
        init-method="start" parent="notifiableBean">
        <property name="name" value="fileDumpSender-Dianping" />
        <property name="storage" ref="storage-Dianping" />
    </bean>

    <bean id="storage-Dianping" class="com.dianping.puma.storage.DefaultEventStorage"
        init-method="start">
        <property name="codec" ref="jsonCodec" />
        <property name="masterBucketIndex" ref="localBucketIndex-Dianping" />
        <property name="slaveBucketIndex" ref="hdfsBucketIndex-Dianping" />
        <property name="archiveStrategy" ref="archiveStrategy" />
        <property name="cleanupStrategy" ref="cleanupStrategy" />
        <property name="name" value="storage-Dianping" />
        <property name="binlogIndexBaseDir"
            value="/data/appdatas/puma/binlogIndex/Dianping/" />
        <property name="timeStampIndexBaseDir"
            value="/data/appdatas/puma/timeStampIndex/Dianping/" />
    </bean>

    <bean id="localBucketIndex-Dianping" class="com.dianping.puma.storage.LocalFileBucketIndex"
        init-method="start">
        <property name="bucketFilePrefix" value="bucket-" />
        <property name="maxBucketLengthMB" value="1000" />
        <property name="baseDir" value="/data/appdatas/puma/storage/Dianping/" />
    </bean>
    <bean id="hdfsBucketIndex-Dianping" class="com.dianping.puma.storage.HDFSBucketIndex"
        init-method="start">
        <property name="bucketFilePrefix" value="bucket-" />
        <property name="maxBucketLengthMB" value="1000" />
        <property name="baseDir" value="/user/workcron/puma/storage/Dianping/" />
    </bean>
    <bean id="archiveStrategy" class="com.dianping.puma.storage.DefaultArchiveStrategy">
        <property name="maxMasterFileCount" value="30" />
    </bean>

    <bean id="cleanupStrategy" class="com.dianping.puma.storage.DefaultCleanupStrategy">
        <property name="preservedDay" value="14" />
    </bean>

    <bean id="jsonCodec" class="com.dianping.puma.core.codec.JsonEventCodec" />

    <bean id="servers" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="server-Dianping" />
            </list>
        </constructor-arg>
    </bean>
</beans>


	
