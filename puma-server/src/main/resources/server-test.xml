<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

	<bean id="server-test" class="com.dianping.puma.server.ReplicationBasedServer"
		parent="notifiableBean">
		<property name="host" value="localhost" />
		<property name="port" value="3306" />
		<property name="username" value="root" />
		<property name="password" value="123456" />
		<property name="defaultBinlogFileName" value="mysql-bin.000001" />
		<property name="defaultBinlogPosition" value="4" />
		<property name="parser" ref="defaultParser-test" />
		<property name="serverId" value="8887" />
		<property name="dataHandler" ref="datahandler-test" />
		<property name="dispatcher" ref="dispatcher-test" />
		<property name="binlogPositionHolder" ref="binlogPositionHolder" />
		<property name="dbServerId" value="1" />
		<property name="name" value="test" />
	</bean>

	<bean id="dispatcher-test" class="com.dianping.puma.sender.dispatcher.SimpleDispatherImpl"
		init-method="start">
		<property name="name" value="dispatcher-test" />
		<property name="senders">
			<list>
				<ref bean="fileSender-test" />
			</list>
		</property>
	</bean>

	<bean id="defaultParser-test" class="com.dianping.puma.parser.DefaultBinlogParser"
		init-method="start" />

	<bean id="datahandler-test" class="com.dianping.puma.datahandler.DefaultDataHandler"
		init-method="start" parent="notifiableBean">
		<property name="tableMetasInfoFetcher" ref="tableMetasInfoFetcher-test" />
	</bean>

	<bean id="archiveStrategy-test" class="com.dianping.puma.storage.DefaultArchiveStrategy">
		<property name="maxMasterFileCount" value="1" />
		<property name="serverName" value="test" />
	</bean>

	<bean id="cleanupStrategy-test" class="com.dianping.puma.storage.DefaultCleanupStrategy">
		<property name="preservedDay" value="2" />
	</bean>

	<bean id="tableMetasInfoFetcher-test"
		class="com.dianping.puma.datahandler.DefaultTableMetaInfoFetcher">
		<property name="metaDBHost" value="localhost" />
		<property name="metaDBPort" value="3306" />
		<property name="metaDBUsername" value="root" />
		<property name="metaDBPassword" value="123456" />
	</bean>

	<bean id="fileSender-test" class="com.dianping.puma.sender.FileDumpSender"
		init-method="start" parent="notifiableBean">
		<property name="name" value="fileDumpSender-test" />
		<property name="storage" ref="storage-test" />
	</bean>

	<bean id="storage-test" class="com.dianping.puma.storage.DefaultEventStorage"
		init-method="start">
		<property name="codec" ref="jsonCodec" />
		<property name="masterBucketIndex" ref="localBucketIndex-test" />
		<property name="slaveBucketIndex" ref="hdfsBucketIndex-test" />
		<property name="archiveStrategy" ref="archiveStrategy-test" />
		<property name="cleanupStrategy" ref="cleanupStrategy-test" />
		<property name="name" value="storage-test" />
		<property name="binlogIndexBaseDir" value="/data/appdatas/puma/binlogIndex/test/" />
		<property name="acceptedTablesConfigKey" value="puma.test_acceptedTables"/>
	</bean>

	<bean id="localBucketIndex-test" class="com.dianping.puma.storage.LocalFileBucketIndex"
		init-method="start">
		<property name="bucketFilePrefix" value="bucket-" />
		<property name="maxBucketLengthMB" value="1000" />
		<property name="baseDir" value="/data/appdatas/puma/storage/test/" />
	</bean>
	<bean id="hdfsBucketIndex-test" class="com.dianping.puma.storage.LocalFileBucketIndex"
		init-method="start">
		<property name="bucketFilePrefix" value="bucket-" />
		<property name="maxBucketLengthMB" value="1000" />
		<property name="baseDir" value="/data/appdatas/puma/storage/slave/test/" />
	</bean>
</beans>


	
