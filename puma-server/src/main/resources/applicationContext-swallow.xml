<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:task="http://www.springframework.org/schema/task"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd
            http://www.springframework.org/schema/task   
    http://www.springframework.org/schema/task/spring-task-3.0.xsd">

    <bean id="pumaTaskStatePublisher"
          class="com.dianping.puma.core.monitor.SwallowEventPublisher"
          init-method="init">
        <property name="topic" value="puma_task_state" />
    </bean>

    <bean id="statusEventPublisher" class="com.dianping.puma.core.monitor.SwallowEventPublisher"
        init-method="init">
        <property name="topic" value="puma_task" />
    </bean>

    <bean id="pumaTaskOperationEventSubscriber"
        class="com.dianping.puma.core.monitor.SwallowEventSubscriber"
        init-method="init">
        <property name="topic" value="puma_task_operation" />
        <property name="type" value="#{pumaServerConfig.id}" />
        <property name="notifyService" ref="notifyService"/>
        <property name="clazz"
            value="com.dianping.puma.core.monitor.PumaTaskOperationEvent" />
        <property name="listeners">
            <list>
                <ref bean="pumaTaskOperationChecker" />
            </list>
        </property>
    </bean>

    <bean id="pumaTaskControllerEventSubscriber"
          class="com.dianping.puma.core.monitor.SwallowEventSubscriber"
          init-method="init">
        <property name="topic" value="puma_task_controller" />
        <property name="type" value="#{pumaServerConfig.id}" />
        <property name="notifyService" ref="notifyService"/>
        <property name="clazz"
                  value="com.dianping.puma.core.monitor.PumaTaskControllerEvent" />
        <property name="listeners">
            <list>
                <ref bean="pumaTaskControllerChecker" />
            </list>
        </property>
    </bean>

</beans>